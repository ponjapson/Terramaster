<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/main"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backbutton"
            android:layout_gravity="center"
            android:layout_marginEnd="4dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImageView"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/profilefree"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/chatRecipientNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/poppinsreg"
                android:text="Ramon Alejandog"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <!-- Audio Call Button -->
            <ImageButton
                android:id="@+id/phoneImgBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/telephone"
                android:layout_marginEnd="16dp" />

            <!-- Video Call Button -->
            <ImageButton
                android:id="@+id/callImgBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/video"
                android:layout_marginEnd="16dp" />

            <!-- Booking Button -->
            <ImageButton
                android:id="@+id/bookingButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/bookicon"
                android:layout_marginEnd="16dp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="1.4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/greyline" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messageRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/messageInput"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/custom_edit_text"
                    android:hint="Aa"
                    android:maxLines="5"
                    android:padding="10dp"
                    android:paddingStart="19dp"
                    android:paddingEnd="34dp"
                    android:scrollHorizontally="false"
                    android:textColor="@color/darkbluegreen"
                    android:textColorHint="@color/greyline"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/sendButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="13dp"
                    android:layout_alignParentEnd="true"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/pmcomm_sendbtn"
                    android:background="@android:color/transparent"/>

            </RelativeLayout>


        </LinearLayout>

    </FrameLayout>


</LinearLayout>
